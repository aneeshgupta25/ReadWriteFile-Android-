<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextSave"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:hint="@string/enter_description_of_file"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSAVE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/editTextSave"
        app:layout_constraintStart_toStartOf="@id/editTextSave"
        app:layout_constraintEnd_toEndOf="@id/editTextSave"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textViewRead"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:hint="Content of saved file will be displayed here"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSAVE"
        app:layout_constraintStart_toStartOf="@id/buttonSAVE"
        app:layout_constraintEnd_toEndOf="@id/buttonSAVE"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonREAD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="READ"
        android:textStyle="bold"
        app:layout_goneMarginTop="50dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textViewRead"
        app:layout_constraintStart_toStartOf="@id/textViewRead"
        app:layout_constraintEnd_toEndOf="@id/textViewRead"
        android:layout_marginTop="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>